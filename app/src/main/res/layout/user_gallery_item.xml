<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/user_gallery_item_padding_top"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_gallery_photo_Image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/user_gallery_item_image_padding_right"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_gallery_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/userGalleryItemTextStyle" />

        <TextView
            android:id="@+id/user_gallery_age_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/userGalleryItemTextStyle" />

        <TextView
            android:id="@+id/user_gallery_gender_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/userGalleryItemTextStyle" />

    </LinearLayout>



</LinearLayout>