<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Default activity style -->
    <style name="defaultActivityStyle">
        <item name="android:paddingLeft">@dimen/default_edges_left_and_right_padding</item>
        <item name="android:paddingRight">@dimen/default_edges_left_and_right_padding</item>
        <item name="android:background">@color/activityBackgroundColorWhite</item>
    </style>

    <style name="SignActivitiesStyle">
        <item name="android:paddingLeft">@dimen/sign_edges_left_and_right_padding</item>
        <item name="android:paddingRight">@dimen/sign_edges_left_and_right_padding</item>
        <item name="android:paddingTop">@dimen/sign_edges_top_and_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/sign_edges_top_and_bottom_padding</item>
        <item name="android:background">@color/activityBackgroundColorBlue</item>
    </style>

    <style name="ButtonColorBlue">
        <item name="android:background">@color/buttonBackgroundColorBlue</item>
        <item name="android:textColor">@color/buttonTextColorWhite</item>
    </style>

    <style name="ButtonColorWhite">
        <item name="android:background">@color/buttonBackgroundColorWhite</item>
        <item name="android:textColor">@color/buttonTextColorBlue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
